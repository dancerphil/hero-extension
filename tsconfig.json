{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "ES2022",
		"outDir": "out",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,   /* enable all strict type-checking options */
		"strictNullChecks": false,
		"allowSyntheticDefaultImports": true
	}
}
